{
  "name": "tree-care-backend",
  "version": "0.1.0",
  "description": "Tree Care Backend API - AWS Lambda + Node.js",
  "main": "index.js",
  "scripts": {
    "dev": "serverless offline",
    "build": "tsc",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js,.ts",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "type-check": "tsc --noEmit",
    "invoke:local": "serverless invoke local",
    "logs": "serverless logs",
    "clean": "rimraf dist .serverless"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1421.0",
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/client-sagemaker-runtime": "^3.0.0",
    "@aws-sdk/client-sns": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "stripe": "^12.0.0",
    "joi": "^17.9.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "axios": "^1.4.0",
    "sharp": "^0.32.0",
    "node-cache": "^5.1.0",
    "uuid": "^9.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^20.4.0",
    "@types/aws-lambda": "^8.10.0",
    "@types/jest": "^29.5.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/lodash": "^4.14.0",
    "typescript": "^5.1.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "serverless": "^3.33.0",
    "serverless-webpack": "^5.13.0",
    "serverless-offline": "^12.0.0",
    "serverless-domain-manager": "^7.0.0",
    "webpack": "^5.88.0",
    "ts-loader": "^9.4.0",
    "webpack-node-externals": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/types/**/*.ts"
    ]
  }
}
